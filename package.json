{
  "name": "universal-mfe-yarn-seed",
  "version": "0.1.0",
  "description": "A universal microfrontend platform for Web and Mobile using Module Federation",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@1.22.22",
  "scripts": {
    "build": "turbo run build",
    "build:shared": "turbo run build --filter=@universal/shared-*",
    "build:web": "turbo run build --filter=@universal/web-*",
    "build:mobile:android": "yarn workspace @universal/mobile-remote-hello build:remote",
    "build:mobile:ios": "PLATFORM=ios yarn workspace @universal/mobile-remote-hello build:remote",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:architecture": "eslint 'packages/**/*.{ts,tsx}' --ignore-pattern '**/dist/**' --ignore-pattern '**/node_modules/**'",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "test": "turbo run test",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "validate:versions": "node scripts/validate-versions.js"
  },
  "devDependencies": {
    "@babel/core": "7.28.5",
    "turbo": "2.7.3",
    "@callstack/repack": "5.2.0",
    "@eslint/js": "9.28.0",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.1.0",
    "@testing-library/react-native": "12.9.0",
    "@types/jest": "29.5.14",
    "eslint": "9.28.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "globals": "16.2.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "prettier": "3.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-test-renderer": "19.1.0",
    "ts-jest": "29.3.4",
    "typescript": "5.9.3",
    "typescript-eslint": "8.33.1"
  }
}
