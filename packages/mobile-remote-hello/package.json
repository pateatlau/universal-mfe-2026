{
  "name": "@universal/mobile-remote-hello",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "node scripts/setup-symlinks.js",
    "build:remote": "rspack build --config ./repack.remote.config.mjs",
    "build:standalone": "rspack build --config ./rspack.standalone.config.mjs",
    "kill:android": "lsof -ti:9004 | xargs kill -9 2>/dev/null || true",
    "kill:ios": "lsof -ti:9005 | xargs kill -9 2>/dev/null || true",
    "kill:standalone:android": "lsof -ti:8083 | xargs kill -9 2>/dev/null || true",
    "kill:standalone:ios": "lsof -ti:8084 | xargs kill -9 2>/dev/null || true",
    "serve": "rspack serve --config ./repack.remote.config.mjs",
    "serve:android": "yarn kill:android && PLATFORM=android yarn serve",
    "serve:ios": "yarn kill:ios && PLATFORM=ios yarn serve",
    "start:bundler:android": "yarn kill:standalone:android && PLATFORM=android rspack serve --config ./rspack.standalone.config.mjs",
    "start:bundler:ios": "yarn kill:standalone:ios && PLATFORM=ios rspack serve --config ./rspack.standalone.config.mjs",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "clean": "rm -rf dist",
    "clean:android": "rm -rf android/build android/.gradle android/app/build",
    "clean:ios": "rm -rf ios/build ios/Pods",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@module-federation/enhanced": "0.21.6",
    "@swc/helpers": "0.5.17",
    "@universal/shared-event-bus": "*",
    "@universal/shared-hello-ui": "*",
    "@universal/shared-i18n": "*",
    "@universal/shared-theme-context": "*",
    "@universal/shared-utils": "*",
    "react": "19.1.0",
    "react-native": "0.80.0"
  },
  "devDependencies": {
    "@babel/plugin-syntax-typescript": "7.27.1",
    "@callstack/repack": "5.2.0",
    "@react-native/babel-plugin-codegen": "0.80.2",
    "@rspack/cli": "1.6.5",
    "@types/react": "19.2.7",
    "typescript": "5.9.3"
  }
}
